<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<h1>Create a new Heroine</h1>

<%= form_for(@heroine) do |f|%>
  <%= f.label :name %>
    <%= f.text_field :name %>
  <%= f.label :super_name %>
    <%= f.text_field :super_name %>
  <%= f.label "Super Power" %>
    <%= f.collection_select :power_id, @powers, :id, :name %>
  <%= f.submit "Create Heroine" %>
<% end %>
